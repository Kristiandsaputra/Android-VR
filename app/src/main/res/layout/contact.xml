<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg5"/>
    <RelativeLayout
        android:layout_marginTop="100dp"
        android:id="@+id/bgmerah"
        android:layout_width="295dp"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    <View
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"/>

        <RelativeLayout
            android:id="@+id/getin"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/git"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/of"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/get"
                android:textAlignment="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Office"
                android:textSize="15sp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/tlp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/of"
                android:textAlignment="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/link4"
                android:textColorLink="#fff"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tlp2"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tlp"
                android:textAlignment="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/link1"
                android:textColorLink="#fff"
                android:textSize="15sp"
                android:textColor="#fff"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sayhel"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getin">
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/sayhai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/say"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/jogja"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/sayhai"
                android:textAlignment="center"
                android:layout_width="275dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:text="@string/link2"
                android:textSize="15sp"
                android:textColorLink="#fff"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/kediri"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/jogja"
                android:textAlignment="center"
                android:layout_width="275dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:text="@string/link3"
                android:textColorLink="#fff"
                android:textSize="15sp"
                android:textColor="#fff"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="130dp"
        android:id="@+id/bgputih"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/cntbtm"/>
         <Button
             android:id="@+id/insta"
             android:layout_marginTop="20dp"
             android:layout_toStartOf="@+id/face"
             android:layout_marginEnd="50dp"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:background="@mipmap/ig"
             android:onClick="open4"/>
        <Button
            android:id="@+id/face"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/fb"
            android:onClick="open5"/>
        <Button
            android:id="@+id/behance"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/face"
            android:layout_marginStart="50dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/be"
            android:onClick="open6"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/br" />
</RelativeLayout>